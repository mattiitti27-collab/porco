    <script>
        // Gestione Banner Cookie
        document.addEventListener("DOMContentLoaded", function() {
            if (!localStorage.getItem("cookiesAccepted")) {
                setTimeout(function() {
                    document.getElementById("cookie-banner").classList.remove("translate-y-full");
                }, 1000); // Ritardo per effetto scenico
            }
        });

        function acceptCookies() {
            localStorage.setItem("cookiesAccepted", "true");
            document.getElementById("cookie-banner").classList.add("translate-y-full");
        }
        
        // Gestione Scroll Progress Bar
        window.onscroll = function() {
            let winScroll = document.body.scrollTop || document.documentElement.scrollTop;
            let height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            let scrolled = (winScroll / height) * 100;
            document.getElementById("scroll-progress").style.width = scrolled + "%";
        };

        // Gestione Menu Mobile
        function toggleMenu() {
            const menu = document.getElementById('mobile-menu');
            if (menu.classList.contains('menu-closed')) {
                menu.classList.remove('menu-closed');
                menu.classList.add('menu-open');
                document.body.style.overflow = 'hidden'; 
            } else {
                menu.classList.remove('menu-open');
                menu.classList.add('menu-closed');
                document.body.style.overflow = ''; 
            }
        }

        function toggleReparto(id) {
            const divs = ['content-superiori', 'content-universita', 'content-test', 'content-corsi'];
            
            // Chiudi tutti gli altri
            divs.forEach(d => {
                const el = document.getElementById(d);
                if(d !== 'content-' + id && !el.classList.contains('hidden')) {
                    el.classList.add('hidden');
                }
            });

            const target = document.getElementById('content-' + id);
            if(target) {
                // Toggle semplice
                if(target.classList.contains('hidden')) {
                     target.classList.remove('hidden');
                     
                     // Scroll migliore con delay
                     setTimeout(() => {
                        const yOffset = -80; // Offset navbar
                        const y = target.getBoundingClientRect().top + window.pageYOffset + yOffset;
                        window.scrollTo({top: y, behavior: 'smooth'});
                    }, 150);
                } else {
                    target.classList.add('hidden');
                }
            }
        }

        function selectSubject(name) {
            const sel = document.getElementById('materiaSelect');
            const msg = document.getElementById('messaggioArea');
            
            if(name.includes('Analisi') || name.includes('Fisica 1') || name.includes('Algebra') || name.includes('Informatica Uni') || name.includes('Chimica Gen') || name.includes('Università') || name.includes('Statistica')) {
                sel.value = 'Universita';
            } else if (name.includes('TOLC') || name.includes('Polizia') || name.includes('Concorsi') || name.includes('Test')) {
                sel.value = 'TestAmmissione';
            } else if (name.includes('Excel') || name.includes('Office') || name.includes('PowerPoint') || name.includes('Dati') || name.includes('Corso')) {
                sel.value = 'Corsi';
            } else {
                sel.value = 'Superiori';
            }

            msg.value = "Salve, vorrei informazioni per: " + name + ".";
            
            const contactSection = document.getElementById('contact-area');
            setTimeout(() => {
                const yOffset = -40;
                const y = contactSection.getBoundingClientRect().top + window.pageYOffset + yOffset;
                window.scrollTo({top: y, behavior: 'smooth'});
            }, 100);
        }

        // --- FORM SUBMISSION & MODAL LOGIC ---
        
        function submitForm(e, type) {
            e.preventDefault();
            const form = e.target;
            const btn = form.querySelector('button[type="submit"]');
            const originalBtnText = btn.innerHTML;
            
            // Visual feedback on button
            btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Attendere...';
            btn.disabled = true;

            const scriptURL = 'https://script.google.com/macros/s/AKfycbxkSvy9ZXRiEdasAneFE6EodC8svc6ybs_uc1euNUmzUFfAsK8Uszl7Pl43L2rx52Ae7w/exec';
            
            fetch(scriptURL, { method: 'POST', body: new FormData(form)})
                .then(response => {
                    // Reset button
                    btn.innerHTML = originalBtnText;
                    btn.disabled = false;
                    
                    // Show Success Modal
                    showModal(type);
                    
                    // Reset form
                    form.reset();
                    if(type === 'review') {
                         document.getElementById('review-form-container').classList.add('hidden');
                    }
                })
                .catch(error => {
                    console.error('Error!', error.message);
                    alert("C'è stato un problema. Per favore contattaci direttamente su WhatsApp.");
                    btn.innerHTML = originalBtnText;
                    btn.disabled = false;
                });
        }

        function showModal(type) {
            const modal = document.getElementById('success-modal');
            const title = document.getElementById('modal-title');
            const message = document.getElementById('modal-message');
            const waText = document.getElementById('modal-wa-text');

            // LOGICA PER NASCONDERE TESTO WHATSAPP NELLE RECENSIONI
            if(type === 'review') {
                title.innerText = "Recensione Inviata!";
                message.innerText = "Grazie per il tuo feedback. Apprezziamo molto il tuo supporto!";
                waText.classList.add('hidden'); // Nasconde la scritta WhatsApp
            } else {
                title.innerText = "Richiesta Inviata!";
                message.innerText = "Abbiamo ricevuto la tua richiesta.";
                waText.classList.remove('hidden'); // Mostra la scritta WhatsApp
            }

            modal.classList.remove('modal-hidden');
            modal.classList.add('modal-visible');
        }

        function closeModal() {
            const modal = document.getElementById('success-modal');
            modal.classList.remove('modal-visible');
            modal.classList.add('modal-hidden');
        }
    </script>
</body>
</html>
